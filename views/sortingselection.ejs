<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

  <body class="home">
    <%- include('./partials/nav.ejs') %>

      <div class="container mt-4">

        <h3 class="mb-4 text-center">Sorting and Selection</h3>

        <div class="row">

          <div class="row flex-column align-items-center text-center">

            <!-- LEFT: Sorting -->
            <div class="col-md-3 border-end mb-4">
              <h5>Sorting</h5>

              <form id="filterForm">

                <div class="mb-3">
                  <label class="form-label">Sort by date</label>

                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="sort" value="asc" checked>
                    <label class="form-check-label">Ascending</label>
                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="sort" value="desc">
                    <label class="form-check-label">Descending</label>
                  </div>
                </div>
            </div>

            <!-- RIGHT: Filters -->
            <div class="col-md-9">
              <h5>Filters</h5>

              <div class="row flex-column align-items-center">

                <div class="col-12 col-lg-6 mb-3">
                  <label class="form-label">Group</label>

                  <div class="input-wrapper">
                    <input type="text" class="form-control" name="group" id="groupInput">
                    <button type="button" class="clear-btn" data-target="groupInput">×</button>
                  </div>

                </div>

                <div class="col-12 col-lg-6 mb-3">
                  <label class="form-label">User</label>

                  <div class="input-wrapper">
                    <select class="form-select" name="user" id="userSelect">
                      <option value="">All users</option>
                      <% users.forEach(u=> { %>
                        <option value="<%= u._id %>">
                          <%= u.username %>
                        </option>
                        <% }) %>
                    </select>
                    <button type="button" class="clear-btn" data-target="userSelect">×</button>
                  </div>
                </div>

              </div>



              <button type="submit" class="btn btn-primary mt-2">Apply</button>
              <button type="button" id="resetAll" class="btn btn-secondary mt-2 ms-2">Reset all</button>

              </form>
            </div>

          </div>

        </div>

        <%- include('./partials/footer.ejs') %>

          <style>
            .input-wrapper {
              display: flex;
              align-items: center;
              gap: 10px;

            }

            .clear-btn {
              background: #ccc;
              border: none;
              border-radius: 50%;
              width: 26px;
              height: 26px;
              font-size: 18px;
              line-height: 22px;
              text-align: center;
              cursor: pointer;
              font-weight: bold;
              padding: 0;
            }

            .clear-btn:hover {
              background: #aaa;
            }
          </style>


          <script src="/js/filters.js"></script>
          <script src="/js/userfoto.js"></script>
  </body>

</html>